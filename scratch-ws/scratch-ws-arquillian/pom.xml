<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.scratch.ws</groupId>
    <artifactId>scratch-ws</artifactId>
    <version>0.1.0-SNAPSHOT</version>
  </parent>

  <artifactId>scratch-ws-arquillian</artifactId>
  <packaging>pom</packaging>

  <name>Scratch Webservices :: Arquillian testing</name>
  
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>

  <modules>
    <module>scratch-ws-arquillian-base</module>
    <module>scratch-ws-arquillian-tomcat</module>
    <module>scratch-ws-arquillian-eap</module>
    <module>scratch-ws-arquillian-wildfly</module>
  </modules>
 
  <properties>
    <shrinkwrap.resolver.version>2.1.1</shrinkwrap.resolver.version> 
    <arquillian.version>1.1.5.Final</arquillian.version> 
    
    <!-- aether/maven, mostly for arquillian/shrinkwrap-->
    <override.version.org.apache.maven>3.1.1</override.version.org.apache.maven>
    <override.version.org.eclipse.aether>0.9.0.M2</override.version.org.eclipse.aether>
    
    <!-- tomcat 7.0.32 + arq-tomcat 1.0.0.CR6 is the magic combination that works.. :/ -->
    <version.org.apache.tomcat>7.0.32</version.org.apache.tomcat>
    <version.org.jboss.arquillian.container.tomcat>1.0.0.CR6</version.org.jboss.arquillian.container.tomcat>
    
    <!-- jetty -->    
    <version.org.mortbay.jetty>6.1.12</version.org.mortbay.jetty>
  </properties>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.scratch.ws</groupId>
        <artifactId>scratch-ws-arquillian-base</artifactId>
        <version>${project.version}</version>
      </dependency>
    
      <!-- apache maven--> 
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-model</artifactId>
        <version>${override.version.org.apache.maven}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-model-builder</artifactId>
        <version>${override.version.org.apache.maven}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-repository-metadata</artifactId>
        <version>${override.version.org.apache.maven}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-settings</artifactId>
        <version>${override.version.org.apache.maven}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-settings-builder</artifactId>
        <version>${override.version.org.apache.maven}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.maven</groupId>
        <artifactId>maven-aether-provider</artifactId>
        <version>${override.version.org.apache.maven}</version>
        <scope>test</scope>
      </dependency>

      <!-- eclipse aether -->
      <dependency>
       <groupId>org.eclipse.aether</groupId>
        <artifactId>aether-api</artifactId>
        <version>${override.version.org.eclipse.aether}</version>
      </dependency>
      <dependency>
       <groupId>org.eclipse.aether</groupId>
        <artifactId>aether-spi</artifactId>
        <version>${override.version.org.eclipse.aether}</version>
      </dependency>
      <dependency>
       <groupId>org.eclipse.aether</groupId>
        <artifactId>aether-impl</artifactId>
        <version>${override.version.org.eclipse.aether}</version>
      </dependency>
      <dependency>
       <groupId>org.eclipse.aether</groupId>
        <artifactId>aether-util</artifactId>
        <version>${override.version.org.eclipse.aether}</version>
      </dependency>

      <!-- arquillian -->
      <!-- Override dependency resolver with test version. This must go *BEFORE* the Arquillian BOM. -->
      <dependency>
        <groupId>org.jboss.shrinkwrap.resolver</groupId>
        <artifactId>shrinkwrap-resolver-bom</artifactId>
        <version>${shrinkwrap.resolver.version}</version>
        <scope>import</scope>
        <type>pom</type>
      </dependency>
      <!-- arquillian: contains all versions for specific arquillian artifacts -->
      <dependency>
        <groupId>org.jboss.arquillian</groupId>
        <artifactId>arquillian-bom</artifactId>
        <version>${arquillian.version}</version>
        <type>pom</type>
        <scope>import</scope>
      </dependency>

     <!--  tomcat -->
      <dependency>
        <groupId>org.jboss.arquillian.container</groupId>
        <artifactId>arquillian-tomcat-managed-7</artifactId>
        <version>${version.org.jboss.arquillian.container.tomcat}</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.tomcat</groupId>
        <artifactId>apache-tomcat</artifactId>
        <version>${version.org.apache.tomcat}</version>
        <type>zip</type>
        <scope>test</scope>
      </dependency>
      <dependency>
        <!-- ARQ-1456 -->
        <groupId>commons-codec</groupId>
        <artifactId>commons-codec</artifactId>
        <version>1.6</version>
        <scope>test</scope>
      </dependency>
      
      <!-- jboss eap -->
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-dist</artifactId>
        <version>${version.org.jboss.as.dist}</version>
        <type>zip</type>
      </dependency>
      <dependency>
        <groupId>org.jboss.as</groupId>
        <artifactId>jboss-as-arquillian-container-managed</artifactId>
        <version>${override.version.org.jboss.as}</version>
      </dependency>
      
      <!-- jetty -->
     <dependency>
        <groupId>org.jboss.arquillian.container</groupId>
        <artifactId>arquillian-jetty-embedded-6.1</artifactId>
        <version>1.0.0.CR2</version>
        <scope>test</scope>
      </dependency>
      
      <!--  wildfly -->
      <dependency>
        <groupId>org.wildfly</groupId>
        <artifactId>wildfly-arquillian-container-managed</artifactId>
        <version>8.1.0.Final</version>
        <scope>test</scope>
      </dependency>
     
      <!-- Other -->
      <dependency>
        <groupId>org.jboss.byteman</groupId>
        <artifactId>byteman-bmunit</artifactId>
        <version>2.2.0.1</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>com.h2database</groupId>
        <artifactId>h2</artifactId>
        <version>1.4.180</version>
        <scope>test</scope>
      </dependency> 
    </dependencies>
  </dependencyManagement> 
</project>
